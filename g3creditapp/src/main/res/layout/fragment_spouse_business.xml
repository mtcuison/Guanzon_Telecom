<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/CreditAppMaterialTheme"
    tools:context=".Fragment.Spouse.Fragment_SpouseBusiness">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/creditApp_infoHeaderBackground"
                android:padding="10dp"
                android:text="@string/header_creditApp_ntrBusiness"
                android:textColor="@color/creditApp_headerTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:text="Business Industry :"
                    tools:ignore="HardcodedText"
                    android:textColor="@color/creditApp_editTextColor"
                    android:fontFamily="@font/roboto_medium"
                    tools:targetApi="jelly_bean"
                    android:padding="10dp"/>

                <Spinner
                    android:id="@+id/spinner_cap_SpsBussNature"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:padding="10dp"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_SpsNtrBusiness"
                style="@style/CreditApp_TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nature of Business"
                android:textColorHint="@color/creditApp_colorAccent"
                tools:ignore="HardcodedText"
                android:visibility="gone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_SpsNtrBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLength="20"
                    android:nextFocusForward="@id/tie_cap_SpsNameOFBuss"
                    android:textColor="@color/creditApp_editTextColor"
                    tools:ignore="LabelFor,RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_SpsNameOFBuss"
                style="@style/CreditApp_TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_creditApp_bussName"
                android:textColorHint="@color/creditApp_colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_SpsNameOFBuss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:digits="@string/free_text_restriction"
                    android:maxLength="50"
                    android:nextFocusForward="@id/tie_cap_SpsAddOFBuss"
                    android:textColor="@color/creditApp_editTextColor"
                    tools:ignore="RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_SpsAddOFBuss"
                style="@style/CreditApp_TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street/Sitio/Barangay"
                android:textColorHint="@color/creditApp_colorAccent"
                tools:ignore="HardcodedText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_SpsAddOFBuss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:digits="@string/free_text_restriction"
                    android:maxLength="100"
                    android:nextFocusForward="@id/tie_cap_SpsBussProv"
                    android:textColor="@color/creditApp_editTextColor"
                    tools:ignore="RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_SpsBussProv"
                    style="@style/CreditApp_TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hinti_creditApp_province"
                    android:textColorHint="@color/creditApp_colorAccent">

                    <AutoCompleteTextView
                        android:id="@+id/tie_cap_SpsBussProv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:nextFocusForward="@id/tie_cap_SpsBussTown"
                        android:textColor="@color/creditApp_editTextColor"
                        tools:ignore="LabelFor,RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_SpsBussTown"
                    style="@style/CreditApp_TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_creditApp_town"
                    android:textColorHint="@color/creditApp_colorAccent">

                    <AutoCompleteTextView
                        android:id="@+id/tie_cap_SpsBussTown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords"
                        android:maxLength="20"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingStart="10dp"
                        android:paddingLeft="10dp"
                        android:nextFocusForward="@id/tie_cap_SpsBussLenght"
                        android:textColor="@color/creditApp_editTextColor"
                        tools:ignore="LabelFor,RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Type of Business :"
                    tools:ignore="HardcodedText"
                    android:textColor="@color/creditApp_editTextColor"
                    android:fontFamily="@font/roboto_medium"
                    tools:targetApi="jelly_bean"
                    android:padding="10dp"/>

                <Spinner
                    android:id="@+id/spinner_cap_SpsBussType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".8"
                    android:text="Size of Business :"
                    tools:ignore="HardcodedText"
                    android:textColor="@color/creditApp_editTextColor"
                    android:fontFamily="@font/roboto_medium"
                    tools:targetApi="jelly_bean"
                    android:padding="10dp"/>

                <Spinner
                    android:id="@+id/spinner_cap_SpsBussSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cap_SpsBussLenght"
                    style="@style/CreditApp_TextInputLayout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/hint_creditApp_bussAge"
                    android:textColorHint="@color/creditApp_colorAccent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tie_cap_SpsBussLenght"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionNext"
                        android:inputType="number|none"
                        android:maxLength="30"
                        android:textColor="@color/creditApp_editTextColor"
                        tools:ignore="RtlSymmetry" />
                </com.google.android.material.textfield.TextInputLayout>

                <Spinner
                    android:id="@+id/spinner_cap_businessLength"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="14dp"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_SpsBussIncome"
                style="@style/CreditApp_TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_creditApp_monthlyPay"
                android:textColorHint="@color/creditApp_colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_SpsBussIncome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="number|none"
                    android:maxLength="10"
                    android:nextFocusForward="@id/tie_cap_SpsBussExpense"
                    android:drawableLeft="@drawable/ic_philippine_peso"
                    android:drawableStart="@drawable/ic_philippine_peso"
                    android:drawablePadding="5dp"
                    android:textColor="@color/creditApp_editTextColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_cap_SpsBussExpense"
                style="@style/CreditApp_TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_creditApp_monthlyExp"
                android:textColorHint="@color/creditApp_colorAccent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_cap_SpsBussExpense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:inputType="number|none"
                    android:maxLength="10"
                    android:drawableLeft="@drawable/ic_philippine_peso"
                    android:drawableStart="@drawable/ic_philippine_peso"
                    android:drawablePadding="5dp"
                    android:textColor="@color/creditApp_editTextColor"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="bottom">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_fragment_business_prevs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CreditAppButtonPrevious"
                    android:text="@string/btn_creditApp_previous"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_fragment_business_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/CreditAppButtonNext"
                    android:text="@string/btn_creditApp_next"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>