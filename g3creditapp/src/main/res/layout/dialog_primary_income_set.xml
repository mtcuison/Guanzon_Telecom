<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#F5F5F5"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardPreventCornerOverlap="true"
    app:cardMaxElevation="5dp"
    android:theme="@style/CreditAppMaterialTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please select which one \nis your primary source of income."
            tools:ignore="HardcodedText"
            android:textColor="@color/creditApp_editTextColor"
            android:fontFamily="@font/roboto_regular"
            tools:targetApi="jelly_bean"
            android:gravity="center"/>

        <RadioGroup
            android:id="@+id/rg_cap_incomeSourcePrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/rb_cap_prmEmployment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Employement"
                tools:ignore="HardcodedText"
                android:layout_margin="3dp"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/rb_cap_prmBusiness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business"
                tools:ignore="HardcodedText"
                android:layout_margin="3dp"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/rb_cap_prmFinance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Finance"
                tools:ignore="HardcodedText"
                android:layout_margin="3dp"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"
                android:visibility="gone"/>

            <RadioButton
                android:id="@+id/rb_cap_prmPension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pension"
                tools:ignore="HardcodedText"
                android:layout_margin="3dp"
                android:fontFamily="@font/roboto_regular"
                tools:targetApi="jelly_bean"
                android:visibility="gone"/>
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/creditApp_editTextColor"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_dialog_prmOkay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Okay"
            android:textColor="@color/creditApp_editTextColor"
            android:backgroundTint="@color/creditApp_colorAccent"
            tools:ignore="HardcodedText"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>