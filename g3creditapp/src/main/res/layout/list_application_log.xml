<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#F5F5F5"
        app:cardCornerRadius="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="5dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/lbl_listLog_GoCasNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:text="GoCas No. : 437Z19000052"
                    android:textSize="16sp"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_medium"
                    tools:targetApi="jelly_bean"/>

                <ImageButton
                    android:id="@+id/btn_deleteApplication"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_application_delete"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="3dp"
                android:background="@color/creditApp_editTextColor"/>

            <TextView
                android:id="@+id/lbl_listLog_applicantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Garcia, Michael Permison"
                android:textSize="16sp"
                android:textColor="@color/creditApp_editTextColor"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_medium"
                tools:targetApi="jelly_bean"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="Transaction No. :"
                    android:textSize="16sp"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_listLog_applicationTransNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="#437Z19000052"
                    android:textSize="16sp"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Date Applied :"
                    android:textSize="16sp"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_listLog_applicationDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="December 12, 2019"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Date Sent :"
                    android:textSize="16sp"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_listLog_dateSent"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="December 12, 2019"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Status :"
                    android:textSize="16sp"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_listLog_applicationWithCI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Approve with CI"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:text="Date Approved :"
                    android:textSize="16sp"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="start"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

                <TextView
                    android:id="@+id/lbl_listLog_approvedDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="December 12, 2019"
                    android:textColor="@color/creditApp_editTextColor"
                    android:gravity="end"
                    tools:ignore="HardcodedText"
                    android:fontFamily="@font/roboto_regular"
                    tools:targetApi="jelly_bean"/>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Other Info."
                android:textSize="16sp"
                android:textColor="@color/creditApp_editTextColor"
                tools:ignore="HardcodedText"
                android:fontFamily="@font/roboto_medium"
                tools:targetApi="jelly_bean"
                android:layout_marginTop="20dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:padding="3dp"
                android:background="@color/creditApp_editTextColor"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    tools:ignore="UselessParent">

                    <TextView
                        android:id="@+id/lbl_listLog_applicationModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sniper 150 MXI"
                        android:textColor="@color/creditApp_editTextColor"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/roboto_regular"
                        tools:targetApi="jelly_bean"
                        android:layout_marginTop="10dp"/>

                    <TextView
                        android:id="@+id/lbl_listLog_applicationPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="123, 000"
                        android:textColor="@color/creditApp_editTextColor"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/roboto_regular"
                        tools:targetApi="jelly_bean"
                        android:layout_marginTop="3dp"/>

                    <TextView
                        android:id="@+id/lbl_listLog_applicationDown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20, 000"
                        android:textColor="@color/creditApp_editTextColor"
                        android:gravity="start"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/roboto_regular"
                        tools:targetApi="jelly_bean"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/lbl_listLog_applicationPrcnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="%100"
                        android:textColor="@color/creditApp_editTextColor"
                        android:gravity="start"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/roboto_regular"
                        tools:targetApi="jelly_bean"
                        android:layout_marginTop="5dp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/lbl_listLog_applicationUnit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Motorcycle"
                        android:textColor="@color/creditApp_editTextColor"
                        android:gravity="end"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/roboto_regular"
                        tools:targetApi="jelly_bean"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/lbl_listLog_applicationBranch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="UEMI Dagupan - Yamaha"
                        android:textColor="@color/creditApp_editTextColor"
                        tools:ignore="HardcodedText"
                        android:gravity="end"
                        android:fontFamily="@font/roboto_regular"
                        tools:targetApi="jelly_bean"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/lbl_listLog_applicationStat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sending..."
                        android:textColor="@color/creditApp_editTextColor"
                        android:textSize="18sp"
                        android:gravity="end"
                        tools:ignore="HardcodedText"
                        android:fontFamily="@font/roboto_medium"
                        tools:targetApi="jelly_bean"/>

                    <ImageButton
                        android:id="@+id/btn_ExportApplication"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_gocas_export"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        tools:ignore="ContentDescription"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>