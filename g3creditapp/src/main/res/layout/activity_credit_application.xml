<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Activity_CreditApplication">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_creditApplication"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:buttonTint="@color/creditApp_headerTextColor"
            app:titleTextColor="@color/creditApp_headerTextColor"
            app:popupTheme="@style/ToolbarPopUpTheme_CreditApp"
            android:theme="@style/CreditAppToolbarTheme"/>

    </com.google.android.material.appbar.AppBarLayout>

    <org.rmj.androidprojects.guanzongroup.g3creditapp.Etc.NonSwipeableViewPager
        android:id="@+id/viewpager_creditApp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>