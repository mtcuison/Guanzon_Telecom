<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Knox_MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/black</item>
        <item name="android:windowBackground">@color/knox_window_DarkBackground</item>
        <item name="popupMenuStyle">@style/Telecom_Popupmenu</item>
    </style>

    <style name="Telecom_Popupmenu" parent="Widget.AppCompat.Light.PopupMenu">
        <item name="android:background">@color/knox_colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlayLight" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/knox_colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
        <item name="android:iconTint" tools:targetApi="o">@color/knox_window_DarkBackground</item>
        <item name="android:buttonTint" tools:ignore="NewApi">@color/knox_window_DarkBackground</item>
    </style>

    <style name="MaterialTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="android:background">@color/knox_colorPrimary</item>
        <item name="android:textColorPrimary">#FFF</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Knox_InputField">
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_regular</item>
    </style>

    <style name="Knox_TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/Knox_FormHint</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="hintTextColor">@color/textColorPrimaryDark</item>
        <item name="android:layout_margin">5dp</item>
        <item name="boxStrokeColor">@color/knox_colorAccent</item>
    </style>

    <style name="Knox_FormHint">
        <item name="android:textColor">@color/textColorPrimaryLight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/roboto_regular</item>
    </style>

    <style name="Knox_MaterialButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/knox_colorPrimaryDark</item>
        <item name="backgroundTint">@color/knox_colorAccent</item>
        <item name="android:autoSizeTextType" tools:targetApi="o">uniform</item>
        <item name="android:autoSizeMaxTextSize" tools:targetApi="o">18sp</item>
        <item name="android:autoSizeMinTextSize" tools:targetApi="o">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>